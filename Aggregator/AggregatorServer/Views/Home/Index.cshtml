@{
    ViewBag.Title = "Агрегатор социальных сетей";
}
<div class="container">
    <div class="row" id="search_panel" style="margin-top: 200px;">
        <div class="input-field col s8 m6 offset-s2 offset-m3">
            <input id="search_input" type="text" class="validate">
            <label class="active" for="search_input">Введите поисковый запрос</label>
            <div class="progress" id="progress"></div>
            <a class="waves-effect waves-light btn" id="search_button">Поиск</a>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col s12 m6 l4" id="col1">
        </div>
        <div class="col s12 m6 l4" id="col2">
        </div>
        <div class="col s12 m12 l4" id="col3">
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        function search() {

            $("#search_panel").animate({
                "margin-top": 0
            }, 500, function () {
                $("#progress").append('<div class="indeterminate"></div>');
            });

            $.ajax({
                type: "POST",
                url: '/Home/Search',
                data: { query: $("#search_input").val().toString() },
                success: successFunc
            });

            function successFunc(data, status) {

                $("#col1").empty();
                $("#col2").empty();
                $("#col3").empty();

                var cols = [$("#col1")];

                var list = JSON.parse(data);
                
                if ($("#col2").offset().left > $("#col1").offset().left)
                    cols.push($("#col2"));
                if ($("#col3").offset().left > $("#col1").offset().left)
                    cols.push($("#col3"));

                var selectedCol = cols[0];

                for (i = 0; i < list.length; i++) {

                    var imageBlock = "";
                    if (list[i].Image != "")
                        imageBlock = '<div class="card-image">' +
                                        '<img src="' + list[i].Image + '">' +
                                    '</div>';
                    var footer = "";
                    if (list[i].AuthorName != "")
                        footer = '<div class="card-content">' +
                                    '<div class="row valign-wrapper">' +
                                        '<div class="col s3 m3 l3">' +
                                            '<img src="' + list[i].AuthorAvatar + '" alt="" class="circle responsive-img">' +
                                        '</div>' +
                                        '<div class="col s9 m9 l9">' +
                                            '<p>' + list[i].AuthorName + '</p>' +
                                            '<p>' + new Date(list[i].Date).toLocaleDateString() + '</p>' +
                                        '</div>' +
                                    '</div>' +
                                '</div>';
                    else {
                        footer = '<div class="card-content">' +
                                    '<p>' + new Date(list[i].Date).toLocaleDateString() + '</p>' +
                                 '</div>';
                    }
                    selectedCol.append(
                        '<a href="' + list[i].PostLink + '" target="_blank">' +
                            '<div class="card">' +
                                imageBlock +
                                '<div class="card-content">' +
                                    '<span class="card-title">' + list[i].Social + '</span>' +
                                    '<p>' + list[i].Text + '<p>' +
                                '</div>' +
                                footer +
                            '</div>' +
                        '</a>');

                    var minHeight = selectedCol.height()

                    cols.forEach(function (item, i, arr) {
                        if (item.height() < minHeight) {
                            selectedCol = item;
                            minHeight = item.height();
                        }
                    });

                }
                $("#progress").empty();
            }
        };

        $('#search_input').keyup(function (e) {
            if (e.keyCode == 13) {
                search();
            }
        });

        $("#search_button").click(function () {
            search();
        });
    </script>
}