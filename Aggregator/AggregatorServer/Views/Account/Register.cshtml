@model AggregatorServer.Models.RegisterModel
@{
    ViewBag.Title = "Пользователи";
}
<div class="container">
    <div class="row">
        <div class="col s12">
            <h5>Добавить пользователя</h5>        
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="input-field">
                    @Html.LabelFor(model => Model.Login)
                    @Html.EditorFor(model => Model.Login)
                    @Html.ValidationMessageFor(model => Model.Login, "", new { @class = "materialize-red-text" })
                </div>
                <div class="input-field">
                    @Html.LabelFor(model => Model.Password)
                    @Html.EditorFor(model => Model.Password)
                    @Html.ValidationMessageFor(model => Model.Password, "", new { @class = "materialize-red-text" })
                </div>
                <div class="input-field">
                    @Html.LabelFor(model => Model.PasswordConfirm)
                    @Html.EditorFor(model => Model.PasswordConfirm)
                    @Html.ValidationMessageFor(model => Model.PasswordConfirm, "", new { @class = "materialize-red-text" })
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="materialize-red-text">@Html.ValidationSummary(true)</div>
                    </div>
                    <button type="submit" class="waves-effect waves-light btn col s12" id="registeruser_button">Добавить</button>
                    <a href="/Account/Users" class="waves-effect waves-light btn col s12">Вернуться</a>
                </div>
            }
        </div>
    </div>
</div>
